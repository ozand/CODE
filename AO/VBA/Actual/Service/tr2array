            Exit For
            Else
            nm_salon_type_eng = ""
            nm_salon_type_short_eng = ""
            nm_salon_type_chain_eng = ""
        End If
        Next f_sl
        
        num_column = num_column + 1
        ar_Data_TR(iii, num_column) = nm_salon_type_eng
        if iii = 1 then dic_Head.add "salon_type_eng", num_column
        
        num_column = num_column + 1
        ar_Data_TR(iii, num_column) = nm_salon_type_short_eng
        if iii = 1 then dic_Head.add "salon_type_short_eng", num_column
        
        num_column = num_column + 1
        ar_Data_TR(iii, num_column) = nm_salon_type_chain_eng
        if iii = 1 then dic_Head.add "salon_type_chain_eng", num_column
                
        
        num_column = num_column + 1
        ar_Data_TR(iii, num_column) = Cells(f_i, 40)
        if iii = 1 then dic_Head.add "type_CLUB", num_column
        
        
        num_column = num_column + 1
        
        ar_Data_TR(iii, num_column) = Cells(f_i, 19)
        if iii = 1 then dic_Head.add "chain_name", num_column
        
        
        nm_month = Cells(f_i, 64)
            
        num_column = num_column + 1
        
        num_month = 0
        For f_m = 0 To 11
        If ar_nm_month_rus(f_m) = nm_month Then
        num_month = f_m + 1
        Exit For
        End If
        Next f_m
        ar_Data_TR(iii, num_column) = num_month
        if iii = 1 then dic_Head.add "CNQ_month_num", num_column

        num_column = num_column + 1
        If Len(Cells(f_i, 65)) = 4 Then cdYear = Cells(f_i, 65) Else cdYear = 2008
        ar_Data_TR(iii, num_column) = cdYear
        if iii = 1 then dic_Head.add "CNQ_year", num_column
        
        Select Case num_month
        Case 1 To 3
        nm_q = "1Q"
        Case 4 To 6
        nm_q = "2Q"
        Case 7 To 10
        nm_q = "3Q"
        Case 11 To 12
        nm_q = "4Q"
        Case Else
        nm_q = Empty
        End Select
        
        num_column = num_column + 1
        ar_Data_TR(iii, num_column) = nm_q
        if iii = 1 then dic_Head.add "cnq_Quarter", num_column
    
            
        num_column = num_column + 1
        vl_mag = Cells(f_i, 160)
        If Len(vl_mag) <> 2 Then vl_mag = Null
        ar_Data_TR(iii, num_column) = vl_mag
        if iii = 1 then dic_Head.add "type_MAG", num_column
        
        
        num_column = num_column + 1
        st_dn_cln = Cells(f_i, 8)
        If Cells(f_i, 8) = 1 Then
        st_cln_base = "Active"

        Else
        st_cln_base = "Closed"

        End If
        ar_Data_TR(iii, num_column) = st_cln_base
        if iii = 1 then dic_Head.add "status_DN_name", num_column
        

    '---------------------------------------------------------------------------------------------------------
    'EDUCATE DATA
    '---------------------------------------------------------------------------------------------------------
        num_column = num_column + 1
        clm_id_ecad = num_column
        id_ECAD = Cells(f_i, 29)
        ar_Data_TR(iii, num_column) = id_ECAD
        if iii = 1 then dic_Head.add "EDU_id_ECAD", num_column
        
            
    '---------------------------------------------------------------------------------------------------------
    
        num_column = num_column + 1
        place = Cells(f_i, 27)
            If IsNumeric(place) Then
            place = Round(place, 0)
            Else
            place = ""
            End If
        ar_Data_TR(iii, num_column) = place
        if iii = 1 then dic_Head.add "_place_HD", num_column
        
        num_column = num_column + 1
        AVG_HD = Cells(f_i, 28)
            If IsNumeric(AVG_HD) Then
            AVG_HD = Round(AVG_HD, 0)
            Else
            place = ""
            End If
        ar_Data_TR(iii, num_column) = AVG_HD
        if iii = 1 then dic_Head.add "AVG_HD", num_column

        num_column = num_column + 1
        ar_Data_TR(iii, num_column) = Cells(f_i, 167)
        if iii = 1 then dic_Head.add "nm_partner", num_column
            
        num_column = num_column + 1
        ar_Data_TR(iii, num_column) = Cells(f_i, 173)
        if iii = 1 then dic_Head.add "cd_partner", num_column
                    
        num_column = num_column + 1
        status_link = num_column
        ar_Data_TR(iii, num_column) = Empty
        if iii = 1 then dic_Head.add "status_link", num_column
        
        num_column = num_column + 1
        num_clm_status_educated = num_column
        ar_Data_TR(iii, num_column) = Empty
        if iii = 1 then dic_Head.add "status_educated", num_column
        
        
        '---------------------------------------------------------------------------------------------------------
        'dictiary create
           
           if iii <> 0 Then  
           
            If Not IsEmpty(cd_UnvCD) Then
            brand_cd_UnvCD = nm_brand & cd_UnvCD
            Else
            brand_cd_UnvCD = "UNLINK" & nm_brand & iii
            End If
            
                If Not dic_UnvCD.Exists(brand_cd_UnvCD) Then
                dic_UnvCD.Add brand_cd_UnvCD, iii
                Else
                
                            If dic_UnvCD.Exists(brand_cd_UnvCD) And st_cln_base = "Active" Then
                            dic_UnvCD.Key(brand_cd_UnvCD) = "Dbl|Act" & brand_cd_UnvCD & iii
                            dic_UnvCD.Add brand_cd_UnvCD, iii
                            Else
                            dic_UnvCD.Add  "Dbl|NotAct" & brand_cd_UnvCD & iii ,  iii                 
                            End If
                End If
                
            End if
            
            
        '---------------------------------------------------------------------------------------------------------

    
    Next f_i

Workbooks(actTR).Close

Next f_brand
'---------------------------------------------------------------------------------------------------------

'ReDim Preserve ar_Data_TR(1 To iii - 1, 1 To num_column)



Workbooks(actWB).Activate
Sheets(in_data).Select


ActiveSheet.UsedRange.Cells.ClearContents
strt_jd_rw = 1



For f_rw_jd = strt_jd_rw To iii 
yyy = yyy + 1
    For f_clm_jd = 1 To (num_column)
    Cells(yyy, f_clm_jd) = ar_Data_TR(f_rw_jd, f_clm_jd)
    Next f_clm_jd

Next f_rw_jd



Cells(1, 1).Resize(0,dic_Head.Count) = Application.Transpose(dic_Head.Keys)

With dic_UnvCD
Cells(2, 27).Resize(.Count) = Application.Transpose(.Keys)
Cells(2, 28).Resize(.Count) = Application.Transpose(.Items)
End With

With Application
.ScreenUpdating = True
.Calculation = xlCalculationAutomatic
.EnableEvents = True
.DisplayStatusBar = True
.DisplayAlerts = True
End With
    
End Sub

