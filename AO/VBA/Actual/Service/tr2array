        ar_Data_TR(iii, num_column) = nm_Mreg
        if iii = 1 then dic_Head.add "mreg_EXT" , num_column
        
        
        
        
    '---------------------------------------------------------------------------------------------------------
            
        
        num_column = num_column + 1
        ar_Data_TR(iii, num_column) = Cells(f_i, 5)
        if iii = 1 then dic_Head.add "REG", num_column
        
        num_column = num_column + 1
        ar_Data_TR(iii, num_column) = Cells(f_i, 165)
        if iii = 1 then dic_Head.add "FLSM", num_column
        
