ActiveSheet.AutoFilterMode = False
tr_LastRow = ActiveSheet.UsedRange.Row + ActiveSheet.UsedRange.Rows.Count - 1
tr_count_row = tr_LastRow - 3

 

'---------------------------------------------------------------------------------------------------------
start_row = 4
'---------------------------------------------------------------------------------------------------------
' create TR data set
'---------------------------------------------------------------------------------------------------------
 
    For f_i = start_row To tr_LastRow
    iii = iii + 1
    
        num_column = 1
