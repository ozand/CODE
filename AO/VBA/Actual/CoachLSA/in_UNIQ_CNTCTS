Sub data_CC_in_GC()


Dim pathc2file As String
Dim ar_code_Brand(4, 1)
Dim LastRow_CC, LastColumns_CC As Integer
Dim num_month

Dim patchTR, actTR, LastRow, out_data, status_head   As String
Dim ALLTIME, EDU_PY, EDU_TY, place, AVG_HD As Variant
Dim b, iii, f_i, x, y, frqOrder   As Integer
Dim ar_nmAVG_Order()
Dim FLSMasSREP as Boolean

'Dim   As Worksheet
Dim ar_Data(), ar_brand(), ar_nmHead(), ar_PYPer_PART_VAL, ar_TYPer_PART_VAL, ar_PYPer_LOR_VAL(), ar_TYPer_LOR_VAL(), ar_nm_month_eng(), ar_nmMregEN(), ar_nmMregLT()

NF = ActiveWorkbook.Name
act_month = InputBox("Month")
act_month = CInt(act_month)

'---------------------------------------------------------------------------------------------------------
'check Sheets and if not - add
'---------------------------------------------------------------------------------------------------------
chek_name = 0
out_data = "Data_unq_cnt"

For Each Sh In ThisWorkbook.Worksheets
If Sh.Name = out_data Then
chek_name = chek_name + 1
Else
chek_name = chek_name + 0
End If

Next Sh

If chek_name = 0 Then
Set Sh = Worksheets.Add()
Sh.Name = out_data
End If

'---------------------------------------------------------------------------------------------------------
ar_nm_month_eng = Array("Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec")
ar_nm_month_eng_rus = Array("������", "�������", "����", "������", "���", "����", "����", "������", "��������", "�������", "������", "�������")
ar_nmMregEN = Array("MOSCOW", "GR", "NORTHWEST", "CENTER", "VOLGA", "SOUTH", "URAL", "SIBERIA", "FAR EAST")
ar_nmMregLT = Array("Moscou", "GR", "Nord-Ouest", "Centre", "Volga-Centre", "Sud", "Oural", "Siberie", "EO")
ar_brand = Array("LP", "KR", "RD", "MX", "ES")
'---------------------------------------------------------------------------------------------------------
Dim dic_UNQ_SREP: Set dic_UNQ_SREP = CreateObject("Scripting.Dictionary")
dic_UNQ_SREP.RemoveAll

'--------------------------------------------------------------------------------------------------------- 



With Application
.ScreenUpdating = False
.EnableEvents = False
.Calculation = xlCalculationManual
'.DisplayPageBreaks = False
.DisplayAlerts = False
End With

status_head = 0
nm_sh_coach = "Coaching"
str_position_in = 2



For f_q = 1 To act_month

    '--------------------------------------------------------------------------------------------------------- 
    If f_q < 10 Then
        mm_act_month = "0" &  f_q
    Else
        mm_act_month =  f_q
    End If
       
    '--------------------------------------------------------------------------------------------------------- 
        
        For b = 0 To 4        
        
        Select Case f_q
        Case act_month
        patchTR = "p:\DPP\Business development\Book commercial\" & ar_brand(b) & "\Top Russia Total 2015 " & ar_brand(b) & ".xlsm"
        Case Else
        patchTR = "p:\DPP\Business development\Book commercial\" & ar_brand(b) & "\History 2015\Top Russia Total 2015." & mm_act_month  & " " & ar_brand(b) & ".xlsm"
        End Select
        
        Workbooks.Open Filename:=patchTR, Notify:=False
        actTR = ActiveWorkbook.Name
                
        Sheets(nm_sh_coach).Select
        ActiveSheet.AutoFilterMode = False
        LastRow = ActiveSheet.UsedRange.Row + ActiveSheet.UsedRange.Rows.Count - 1  
        LastColum = ActiveSheet.UsedRange.Column - 1 + ActiveSheet.UsedRange.Columns.Count
        
        ReDim ar_Data(LastRow - 2, LastColum) ' num_colums)
        ReDim ar_nmHead(LastColum)
            iii = 0
            
            For f_i = str_position_in To LastRow
            '--------------------------------------------------------------------------------------------------------- 
            FLSMasSREP = False
            '--------------------------------------------------------------------------------------------------------- 
            
            nm_SREP = Trim(Cells(f_i, 3))
            nm_FLSM = Trim(Cells(f_i, 6))
            nm_sector = Trim(Cells(f_i, 1))
            nm_REG = Trim(Cells(f_i, 11))
            nm_mreg = Trim(Cells(f_i, 10))
            nm_sector = Trim(Cells(f_i, 1))
            
            'Mreg name
            '--------------------------------------------------------------------------------------------------------- 
             nm_mreg = Right(Cells(f_i, 22), Len(Cells(f_i, 22).Value) - 3)
            
                If nm_mreg = "Moscou GR" Then
                nm_reg = Cells(f_i, 5)
                textPos = InStr(nm_reg, "MSK")
                textPos = InStr(nm_reg, "Moscou") + textPos
                    If textPos > 0 Then
                    nm_mreg = "Moscou"
                    Else
                    nm_mreg = "GR"
            
                    End If
                End If
                
                For f_mr = 0 To UBound(ar_nmMregLT)
                If ar_nmMregLT(f_mr) = nm_mreg Then
                nm_mreg = ar_nmMregEN(f_mr)
                End If
                Next f_mr
            '--------------------------------------------------------------------------------------------------------- 
                          
            
            if left(nm_SREP, 5) = "�����" then nm_SREP = "vacancy_" & nm_sector :end if    
            if left(nm_FLSM, 5) = "�����" then nm_SREP = "vacancy_" & nm_reg :end if    
            if nm_SREP = nm_FLSM Then FLSMasSREP = True
            
            
            num_colums = 0
            if f_i = str_position_in then ar_Data(iii, num_colums) = "SREP"
                ar_Data(iii, num_colums) = nm_SREP
            end if
            
                            
            num_colums = num_colums + 1
            For f_m = 0 To 11
            If ar_nm_month_eng_rus(f_m) = nm_month Then num_month = f_m
            Next f_m
            ar_Data(iii, num_colums) = num_month
            if f_i = str_position_in then ar_nmHead(num_colums) = "months"
            
            num_colums = num_colums + 1
            
            If Len(Cells(f_i, 22)) > 0 Then
                nm_mreg = Right(Cells(f_i, 22), Len(Cells(f_i, 22).Value) - 3)
            
                If nm_mreg = "Moscou GR" Then
                nm_reg = Cells(f_i, 5)
                textPos = InStr(nm_reg, "MSK")
                textPos = InStr(nm_reg, "Moscou") + textPos
                    If textPos > 0 Then
                    nm_mreg = "Moscou"
                    Else
                    nm_mreg = "GR"
            
                    End If
                End If
                
                For f_mr = 0 To UBound(ar_nmMregLT)
                If ar_nmMregLT(f_mr) = nm_mreg Then
                nm_mreg = ar_nmMregEN(f_mr)
                End If
                Next f_mr
                
                Else
                nm_mreg = 0
            End If
                
            
            ar_Data(iii, num_colums) = nm_mreg
            if f_i = str_position_in then ar_nmHead(num_colums) = "mreg"
        
            If Len(nm_FLSM) > 0 Then iii = iii + 1
            
        Next f_i
        
            If ActiveWorkbook.Name <> NF Then
        ActiveWindow.Close
            End If
        Application.DisplayAlerts = False
        
            
        Workbooks(NF).Activate
        'Sheets(out_data).Visible = False
        Sheets(out_data).Activate
        
        'clear sheet & create head & create name OR fiil data
        '---------------------------------------------------------------------------------------------------------
        If status_head = 0 Then
        ActiveSheet.UsedRange.Cells.ClearContents
        end_POS = iii + 1
        start_POS = 2
        
        Dim n As Name
        For Each n In ThisWorkbook.Names
            On Error Resume Next
            n.Delete
            Next n
        
        For t = 0 To num_colums
            
        If IsEmpty(ar_nmHead(t)) Then
        head_clmn_name = t
        Else
        head_clmn_name = ar_nmHead(t)
        End If
            
        Cells(1, t + 1) = head_clmn_name
        Cells(1, t + 1).Select
        'ActiveWorkbook.Names.Add Name:=head_clmn_name, RefersTo:="=" & ActiveSheet.Name & "!" & ActiveCell.Address()
        Next t
        
        Else
        start_POS = end_POS + 1
        end_POS = start_POS + iii - 1
        End If
        
        ActiveSheet.Cells(start_POS, 1).Resize(end_POS - start_POS + 1, num_colums + 1) = ar_Data()
        status_head = 1
        Next b

Next f_q

'ActiveWorkbook.Names.Add Name:=out_data, RefersToR1C1:="=OFFSET(" & out_data & "!R1C1,0,0,COUNTA(" & out_data & "!R1C1:R65535C1),COUNTA(" & out_data & "!R1C1:R1C255))"
'ActiveWorkbook.Names("SOURCE").Comment = ""
'Sheets(out_data).Visible = False
ActiveWorkbook.RefreshAll

'format???? table
'---------------------------------------------------------------------------------------------------------
  
ActiveWindow.DisplayGridlines = False

'For Each cell In ActiveSheet.UsedRange
    
    With ActiveSheet.UsedRange.Cells.Font
        .ColorIndex = xlAutomatic
        .TintAndShade = 0
        .Bold = False
    End With
    
    With ActiveSheet.UsedRange.Cells.Interior
    .Pattern = xlNone
    End With

'Next cell

LastRowE = ActiveSheet.UsedRange.Row + ActiveSheet.UsedRange.Rows.Count - 1

Set lRangeCol = Nothing
Set lRangeH = ActiveSheet.Rows(iii + 1)

For f = LastRowE To 2 Step -2
Set lRangeCol = Application.Union(lRangeH, ActiveSheet.Rows(f))
Set lRangeH = lRangeCol

Next f
lRangeCol.Select

With Selection.Interior
        .Pattern = xlSolid
        .PatternColorIndex = xlAutomatic
        .ThemeColor = xlThemeColorDark1
        .TintAndShade = -4.99893185216834E-02
        .PatternTintAndShade = 0
End With



'---------------------------------------------------------------------------------------------------------

With Application
.ScreenUpdating = True
.Calculation = xlCalculationAutomatic
.EnableEvents = True
.DisplayStatusBar = True
.DisplayAlerts = True
End With

End Sub





